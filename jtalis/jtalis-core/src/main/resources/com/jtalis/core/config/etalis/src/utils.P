assert_list(List,PredicateName):-
	atom(PredicateName),
	dynamic(PredicateName/1),
	assert_list_internal(List,PredicateName),
	!.

% assert_list_internal(+List,+PredicateName)
assert_list_internal([],_):-
	!.
assert_list_internal([H|T],PredicateName):-
	W=..[PredicateName,H],
	assert(W),
	assert_list_internal(T,PredicateName),
	!.

