% predicate used by N-times
% trans_ntime/4
% trans_ntime(+Temp,+Event,+N,-Out)
trans_ntime(Temp, Event, N, Out) :-
	N > 1,
	NTime is N-1,
	Temp1 =.. [seq, Temp, Event],
	trans_ntime(Temp1, Event, NTime, Out),
	!.
trans_ntime(Temp, Event, 1, Out) :-
	Out =.. [seq, Temp, Event],
	!.
trans_ntime(Temp, _Event, 0, Out) :-
	Out = Temp,
	!.

