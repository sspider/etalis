%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% write_spaces/1
write_spaces(I):-
	Spaces is I*8,
	writeN(Spaces,' ').

% writeN/2
%  write N of C
writeN(N,C) :-
	( N > 0 ->
	    M is N - 1,
	    write(C),
	    writeN(M,C)
	;
	    true
	).

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% write_spaces/2
write_spaces(FileHandler,I):-
	Spaces is I*8,
	writeN(FileHandler,Spaces,' ').

% writeN/3
%  write N of C in file FileHandler
writeN(FileHandler,N,C) :-
	( N > 0 ->
	    M is N - 1,
	    write(FileHandler,C),
	    writeN(FileHandler,M,C)
	;
	    true
	).

