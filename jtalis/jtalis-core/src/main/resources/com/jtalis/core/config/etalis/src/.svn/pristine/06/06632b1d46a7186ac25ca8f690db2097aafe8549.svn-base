	write(FileHandler,event(Event,[T1,T2])),
	incCounter(udraw),
	counter(udraw,V),
	write(FileHandler,' '),
	write(FileHandler,V),
	write(FileHandler,'",n("'),
	(Label \= unlabeled -> 
		(	write(FileHandler,Label),
		write(FileHandler,' rule:'),
		write(FileHandler,'\n')); true ),
	write(FileHandler,'failed'),
	write(FileHandler,' '),
	write(FileHandler,event(Event,[T1,T2])),
	counter(udraw,V),
	write(FileHandler,' '),
	write(FileHandler,V),
	write(FileHandler,'",[a("OBJECT","'),
	(Label \= unlabeled -> 
		(	write(FileHandler,Label),
		write(FileHandler,' rule:'),
		write(FileHandler,'\n')); true ),
